        function Font(value) {
            var myElement = document.getElementById("cld-1360742-1");
            myElement.style.fontFamily = value;
            sessionStorage.setItem('Font', value);

        }
        function increaseFontsize() {
            var myElement = document.getElementById("text-content");
            var size = document.getElementById("changefs");
            size.value = ++size.value
            myElement.style.fontSize = size.value + "px";
        }
        function decreaseFontsize() {
            var myElement = document.getElementById("text-content");
            var size = document.getElementById("changefs");
            size.value = --size.value
            myElement.style.fontSize = size.value + "px";
        }
        function changefontsize(size) {
            var myElement = document.getElementById("text-content");
            myElement.style.fontSize = size + "px";
