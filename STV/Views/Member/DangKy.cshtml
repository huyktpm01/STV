<!DOCTYPE HTML>
<html>
<head>
    <title>Register</title>
    <h4>@ViewBag.ThongBao</h4>
    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Custom Theme files -->
    <link href="~/Content/style1.css" rel="stylesheet" type="text/css" media="all" />
    <!-- for-mobile-apps -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Classy Login form Responsive, Login form web template, Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <!-- //for-mobile-apps -->
    <!--Google Fonts-->
    <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
    <!--header start here-->
    <div class="header">
        <div class="header-main">
            <h1>Register Account</h1>
            <h4>@ViewBag.ThongBao</h4>
            <div class="header-bottom">
                <div class="header-right w3agile">

                    <div class="header-left-bottom agileinfo">
                        @using (Html.BeginForm("DangKy", "Member", FormMethod.Post, new
                        {
                            @enctype =
"multipart/form-data"
                        }))
                        {
                            @Html.ValidationSummary(true)

                            <input type="text" style="background-image: url(../../Image/m.png)" value="User name" name="UserName" id="UserName" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'User name';}" />
                            <input type="password" value="Password" name="Pass" id="Pass" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'password';}" />
                            <input type="password" value="Confirm" name="PassNL" id="PassNL" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Comfirm';}" />
                            <div style="display: flex; align-items: center;">
                                <div>
                                    <img src="~/Image/picture.png" alt="Image Icon" style="width: 20px; height: 20px; margin-right: 5px;">
                                </div>
                            </div>
                            <input type="file" value="Image" name="fFileUpload" id="fFileUpload" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Image';}" />

                            <input type="text" style="background-image: url(../../Image/mail.png)" value="Email" name="Email" id="Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}" />
                            <input type="date" style="background-image: url(../../Image/calendar.png)" value="Birth" name="Birth" id="Birth" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Birth';}" />
                            <input type="text" style="background-image: url(../../Image/sex.png)" value="Gender" name="Gender" id="Gender" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Gender';}" />
                            <input type="submit" value="Create Account">

                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>