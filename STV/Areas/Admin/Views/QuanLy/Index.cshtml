@using STV.Models
@using PagedList.Mvc
@model PagedList.PagedList<STV.Models.Story>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container shadow p-2 bg-light">
    <div class="main">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Tên</th>
                    <th scope="col">Thể Loại</th>
                    <th scope="col">Số chương</th>
                    <th hidden="" scope="col">Vip</th>
                    <th hidden="" scope="col">Đã bán</th>
                    <td scope="col"> Danh Sách Chương</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var sach in Model)
                {

                    <tr>
                        <td>@sach.Title</td>
                        <td>@sach.category.CatName</td>
                        <td>@sach.N_O_Chapter</td>
                        <td hidden="">@sach.Vip</td>
                        <td hidden="">@sach.View</td>
                        <td><a href="@Url.Action("DSChap", "QuanLy", new { StoryID = sach.StoryID})"><button type="button" class="btn btn-primary"><i class="fa-solid fa-list"></i></button></a></td>
                    </tr>

                }
            </tbody>
        </table>
    </div>

    <div>
        <div style="width:100%;text-align:center;">
            <nav style="display:inline-block;">
                <ul class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", "QuanLy", new
{
page = page
}))
                </ul>
            </nav>
        </div>
    </div>
</div>

